    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^33.0.0",
    "electron-builder": "^24.0.0",
    "electron-vite": "^2.3.0",
    "typescript": "^5.4.0",
    "vite": "^5.2.0"
